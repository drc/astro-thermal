---
const { title = "Receipt Printer Utilities", description = "A web app for printing receipts" } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="googlebot" content="noindex" />
        <meta name="viewport" content="initial-scale=1, viewport-fit=cover, width=device-width" />
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
        <meta name="apple-mobile-web-app-title" content={title} />
        <link rel="icon" sizes="192x192" href="/android-app.png" />
        <link rel="icon" sizes="128x128" href="/app-icon.png" />
        <link rel="apple-touch-icon" sizes="180x180" href="/app-icon-highres.png" />
        <link rel="icon" type="image/svg+xml" href="https://fav.farm/ðŸ§¾" />
        <link rel="manifest" href="/manifest.json" />
        <meta name="og:title" content={title} />
        <meta name="og:description" content={description} />
        <meta name="og:image" content="/app-icon-highres.png" />
        <meta name="og:url" content={Astro.url} />
        <meta name="generator" content={Astro.generator} /><title>
            {title}
        </title>
    </head>

    <!-- possible content values: default, black or black-translucent -->

    <body>
        <slot />
    </body>

    <style>
        :root {
            --color-primary: #0b7285;
            --color-primary-dark: #095c66;
            --color-secondary: #0ea5ff;
            --color-secondary-dark: #0284c7;
            --color-gradient-1: #4fc3ff;
            --color-gradient-2: #2fd2c9;
            --color-gradient-3: #00b4ff;
        }
        html,
        body {
            margin: 0;
            width: 100%;
            /* height: 100%; */
            box-sizing: border-box;
        }

        *,
        *::before,
        *::after {
            box-sizing: inherit;
        }

        body {
            touch-action: pan-x pan-y;
            margin: 0;
            min-height: 100svh;
            padding: env(safe-area-inset-top, 1rem) env(safe-area-inset-right, 1rem) env(safe-area-inset-bottom, 1rem)
                env(safe-area-inset-left, 1rem);
            font-family:
                system-ui,
                -apple-system,
                "Segoe UI",
                Roboto,
                "Helvetica Neue",
                Arial;
            background:
                radial-gradient(circle at 18% 12%, rgba(255, 255, 255, 0.25), transparent 12%),
                linear-gradient(
                    135deg,
                    var(--color-gradient-1) 0%,
                    var(--color-gradient-2) 45%,
                    var(--color-gradient-3) 100%
                );
            background-repeat: no-repeat;
            background-size: cover;
        }

        @supports not (height: 100svh) {
            body {
                min-height: 100vh;
            }
        }

        html {
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</html>
