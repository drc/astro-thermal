---
import Crown from "@/components/Crown.astro";

interface Props {
    list?: string;
}

const { list = "Apples,Oranges,Bananas" } = Astro.props;
---

<div class="groceries">
    <Crown />
    <h1 class="heading">Groceries</h1>

    <ul>
        {list.split(",").map((item: string) => <li>{item}</li>)}
    </ul>

    <p class="footer">
        {list.split(",").length} class A Groceries
    </p>
</div>

<style>
    @font-face {
        font-family: "Marlboro";
        src: url("/fonts/Marlboro.ttf") format("truetype");
    }
    ul {
        list-style: square;
    }
    .heading {
        margin: 0;
        margin-top: -20px;
        height: auto;
        font-family: "Marlboro";
        font-size: 11rem;
        font-weight: 500;
        letter-spacing: -0.2rem;
        align-self: center;
    }
    .groceries {
        box-sizing: border-box;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
        border: 1px solid black;
        display: flex;
        flex-direction: column;
        gap: 20px;
        font-size: 30px;
        max-width: 560px;
        margin: 0 auto;
    }
    .footer {
        width: 100%;
        text-align: center;
        text-transform: uppercase;
        align-self: center;
        color: goldenrod;
        font-stretch: expanded;
        font-family: "Lucida Console";
        border-bottom: 20px #c60000 solid;
        padding-bottom: 20px;
        margin-bottom: 0;
    }
</style>
