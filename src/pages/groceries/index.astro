---
const grocery_list = Astro.url.searchParams.get("list") || "Apples,Oranges,Bananas";
---

<div class="groceries">
    <h1>Groceries</h1>

    <p>
        Here is a list of groceries:
        <ul>
            {grocery_list.split(",").map((item) => <li>{item}</li>)}
        </ul>
    </p>
</div>

<style>
    .groceries {
        border: 1px solid black;
        display: flex;
        flex-direction: column;
        gap: 20px;
        font-size: 30px;
        max-width: 518px;
        margin: 0 auto;
    }
</style>
