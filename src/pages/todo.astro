---
const item = Astro.url.searchParams.get("item") || "No item provided";
---

<main title="Todo Item">
    <h1>
        {
            new Intl.DateTimeFormat("en-US", {
                dateStyle: "short",
                timeStyle: "short",
                timeZone: "America/Chicago",
            }).format(new Date())
        }
    </h1>
    <p>{item}</p>
</main>

<style>
    h1,
    p {
        font-size: 4rem;
        text-align: center;
    }
    main {
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif,
            "Apple Color Emoji",
            "Segoe UI Emoji",
            "Segoe UI Symbol";
        max-width: 568px;
        margin: 0 auto;
        border: 4px solid red;
    }
</style>
