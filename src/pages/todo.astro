---
const item = Astro.url.searchParams.get("item") || "No item provided";
const timestamp = new Intl.DateTimeFormat("en-US", {
    dateStyle: "short",
    timeStyle: "short",
    timeZone: "America/Chicago",
}).format(new Date());
---

<main>
    <div class="receipt-header">
        <h1 class="title">{item}</h1>
    </div>

    <div class="receipt-divider"></div>

    <div class="receipt-body">
        <div class="info-group">
            <span class="label">Date & Time</span>
            <span class="value">{timestamp}</span>
        </div>
    </div>

    <div class="receipt-divider"></div>

    <div class="receipt-footer">
        <p class="footer-text">Complete and discard</p>
    </div>
</main>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Boldonse&display=swap");

    main {
        font-family: system-ui;
        max-width: 560px;
        margin: 0 auto;
        padding: 1.5rem 1rem;
        background: white;
        color: #000;
    }

    h1 {
        font-family: "Boldonse", system-ui;
    }

    .receipt-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .title {
        font-size: 3.8rem;
        font-weight: 700;
        margin: 0;
        letter-spacing: -0.5px;
        word-wrap: break-word;
    }

    .receipt-divider {
        border-top: 2px solid #000;
        margin: 1.5rem 0;
    }

    .receipt-body {
        margin-bottom: 1rem;
    }

    .info-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
        padding: 0.5rem 0;
        font-size: 1.8rem;
    }

    .label {
        font-weight: 700;
        color: #000;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 1.6rem;
    }

    .value {
        text-align: right;
        font-weight: 500;
        font-family: "Courier New", monospace;
    }

    .receipt-footer {
        text-align: center;
        padding-top: 1rem;
    }

    .footer-text {
        font-size: 1.5rem;
        margin: 0;
        color: #333;
        font-weight: 600;
    }

    /* Print-friendly styles */
    @media print {
        body {
            margin: 0;
            padding: 0;
        }

        main {
            max-width: 100%;
            margin: 0;
            padding: 0.75rem;
            box-shadow: none;
        }
    }
</style>
